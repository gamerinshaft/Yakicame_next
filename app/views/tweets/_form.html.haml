#form
  .profile
    = image_tag current_user.image_url(:thumb).to_s , class: "cuser_image"
    .cusername
      = current_user.username
      .user_at
        = "@" + current_user.username

  .list
    %table
      %tr
        %th.span3 ツイート  
        %th.span3 お気に入り
        %th.span3　フォロー
        %th.span3　フォロワー
      %tr
        %td　23
        %td　23
        %td　23
        %td　23
  .form_box
    = form_for @tweet do |f|
      - if @tweet.errors.any?
        #error_explanation
          %h2= "#{pluralize(@tweet.errors.count, "error")} prohibited this tweet from being saved:"
          %ul
            - @tweet.errors.full_messages.each do |msg|
              %li= msg
      %strong コメント
      .field
        
        = f.file_field :image

      .field
        
        = f.text_area :content, rows: 10, placeholder: "コメントを入力してください", class: "text_area"


      .actions
        = f.submit '投稿', class: "btn-primary"
